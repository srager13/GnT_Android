<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:background="@color/bckgrnd_color"
    tools:context=".CouponUsedDisplay" >

    <TextView
        android:id="@+id/coupon_used_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:padding="5dp"
        android:gravity="center"
         />
    
    <TextView
        android:id="@+id/coupon_used_thank_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/blue"
        android:gravity="center"
        android:text="@string/coupon_used_thank_you_message"
         />
    
    <Button 
        android:id="@+id/done_button"
        android:text="Done"
        style="@style/HomeScreenButtons"
		android:layout_gravity="center_horizontal"
		android:onClick="onClickDone" >
    </Button>
</LinearLayout>